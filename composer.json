{
    "name": "fgtclb/llms-txt",
    "type": "typo3-cms-extension",
    "description": "TYPO3 extension for generating .well-known/llm.txt files according to llmstxt.org specification",
    "keywords": ["TYPO3", "CMS", "llm", "ai", "crawling", "policy"],
    "homepage": "https://github.com/fgtclb/llms-txt",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "FGTCLB",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/fgtclb/llms-txt/issues",
        "source": "https://github.com/fgtclb/llms-txt",
        "docs": "https://github.com/fgtclb/llms-txt#readme"
    },
    "require": {
        "php": "^8.3",
        "typo3/cms-core": "^13.0",
        "typo3/cms-backend": "^13.0",
        "typo3/cms-extbase": "^13.0",
        "typo3/cms-fluid": "^13.0",
        "typo3/cms-scheduler": "^13.0",
        "league/html-to-markdown": "^5.1"
    },
    "require-dev": {
        "typo3/testing-framework": "^8.0",
        "typo3/coding-standards": "^0.8",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0 || ^11.0"
    },
    "autoload": {
        "psr-4": {
            "FGTCLB\\LlmsTxt\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FGTCLB\\LlmsTxt\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "llms_txt"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit Tests/Unit",
        "test:functional": "phpunit Tests/Functional",
        "cs:fix": "php-cs-fixer fix",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "stan": "phpstan analyse",
        "docs": "docker run --rm -v $(pwd):/project ghcr.io/typo3-documentation/render-guides:latest --config=Documentation --output=Documentation-GENERATED-temp"
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true
        },
        "sort-packages": true
    }
}
